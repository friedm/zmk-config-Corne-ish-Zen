#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define DEFAULT 0
#define NAVIG 1
#define SYMBO 2
#define META 3

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
                        label = "DEFAULT";
                        bindings = <
        &kp GRAVE      &kp Q &kp W &kp E &kp R &kp T    &kp Y &kp U &kp I    &kp O   &kp P    &kp BSLH
        &mt LCTRL ESC  &kp A &kp S &kp D &kp F &kp G    &kp H &kp J &kp K    &kp L   &kp SEMI &kp ENTER 
        &mt LSHFT      &kp Z &kp X &kp C &kp V &kp B    &kp N &kp M &kp CMMA &kp DOT &kp FSLH &kp RSFT
                   &kp LGUI &lt NAVIG SPACE &mt LALT TAB    &kp BKSP &mo SYMBO &kp INS  
                        >;
                };

                navig_layer {
                        label = "NAVIG";
                        bindings = <
        &trans &none &none &none &none &none    &none &none &none &none &trans &none
        &trans &none &none &none &none &none    &kp LEFT &kp DOWN &kp UP &kp RIGHT &none &none
        &trans &trans &trans &trans &trans &trans    &kp HOME &kp PG_DN &kp PG_UP &kp END &trans &trans
                &trans &trans &trans              &trans &mo META &trans
                        >;
                };
        };
};
